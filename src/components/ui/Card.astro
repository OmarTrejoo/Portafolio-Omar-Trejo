---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  class?: string;
  hoverEffect?: boolean;
  noPadding?: boolean;
}

const { class: className, hoverEffect = true, noPadding = false, ...rest } = Astro.props;
---

<div
  class:list={[
    "relative bg-slate-950/50 border border-slate-800/50 backdrop-blur-sm shadow-lg",
    noPadding ? "" : "p-6",
    hoverEffect ? "hover:scale-[1.02] hover:border-emerald-500/30 hover:bg-slate-900/60 transition-all duration-300 group" : "",
    "rounded-2xl overflow-hidden",
    className,
  ]}
  {...rest}
>

  <slot />
</div>
