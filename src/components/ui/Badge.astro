---
interface Props {
  label: string;
  icon?: string;
  class?: string;
}

const { label, icon, class: className } = Astro.props;
---

<span
  class:list={[
    "inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm font-medium",
    "bg-slate-800/50 text-slate-300 border border-slate-700/50",
    "hover:bg-slate-800 hover:text-slate-200 hover:border-slate-600 transition-all duration-300",
    className
  ]}
>
  {icon && (
    <img 
      src={icon} 
      alt="" 
      class="w-4 h-4 object-contain opacity-80" 
      loading="lazy"
    />
  )}
  <span>{label}</span>
</span>
