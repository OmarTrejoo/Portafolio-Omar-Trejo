---
interface Props {
  variant?: "hero" | "default";
}

const { variant = "default" } = Astro.props;
---

<div
  class="absolute inset-0 overflow-hidden pointer-events-none select-none"
>

  {
    variant === "hero" && (
      <canvas
        id="constellation-canvas"
        class="absolute inset-0 w-full h-full opacity-60 [mask-image:linear-gradient(to_bottom,white_60%,transparent_100%)]"
      />
    )
  }


  <div
    class:list={[
      "absolute w-full h-full",
      variant === "hero" ? "opacity-100" : "opacity-40",
    ]}
  >
    <div
      class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] rounded-full bg-emerald-900/10 blur-[100px] animate-pulse"
      style="animation-duration: 8s;"
    >
    </div>
    <div
      class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] rounded-full bg-slate-800/20 blur-[100px] animate-pulse"
      style="animation-duration: 12s;"
    >
    </div>
  </div>


  <div
    class="absolute inset-0 bg-[url('/noise.svg')] opacity-20 mix-blend-overlay"
  >
  </div>
</div>

<script>
  const canvas = document.getElementById(
    "constellation-canvas",
  ) as HTMLCanvasElement;
  const ctx = canvas.getContext("2d");

  if (canvas && ctx) {
    let width = window.innerWidth;
    let height = window.innerHeight;

    const particleCount = width < 768 ? 50 : 100; 
    const connectionDistance = 125;
    const mouseDistance = 250;

    canvas.width = width;
    canvas.height = height;

    class Particle {
      x: number;
      y: number;
      vx: number;
      vy: number;
      size: number;

      constructor() {
        this.x = Math.random() * width;
        this.y = Math.random() * height;
        this.vx = (Math.random() - 0.5) * 0.33;     
        this.vy = (Math.random() - 0.5) * 0.33;
        this.size = Math.random() * 2 + 1;
      }

      update() {
        this.x += this.vx;
        this.y += this.vy;

        if (this.x < 0 || this.x > width) this.vx *= -1;
        if (this.y < 0 || this.y > height) this.vy *= -1;
      }

      draw() {
        if (!ctx) return;
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
        ctx.fillStyle = "rgba(52, 211, 153, 0.4)";
        ctx.fill();
      }
    }

    let particles: Particle[] = [];
    for (let i = 0; i < particleCount; i++) {
      particles.push(new Particle());
    }
    let mouse = { x: -1000, y: -1000 };
    window.addEventListener("mousemove", (e) => {
      const rect = canvas.getBoundingClientRect();
      mouse.x = e.clientX - rect.left;
      mouse.y = e.clientY - rect.top;
    });

    function animate() {
      if (!ctx) return;
      ctx.clearRect(0, 0, width, height);

      particles.forEach((p, index) => {
        p.update();
        p.draw();

        for (let j = index + 1; j < particles.length; j++) {
          const p2 = particles[j];
          const dx = p.x - p2.x;
          const dy = p.y - p2.y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < connectionDistance) {
            ctx.beginPath();
            ctx.strokeStyle = `rgba(52, 211, 153, ${0.2 * (1 - distance / connectionDistance)})`;
            ctx.lineWidth = 1;
            ctx.moveTo(p.x, p.y);
            ctx.lineTo(p2.x, p2.y);
            ctx.stroke();
          }
        }

        const dx = p.x - mouse.x;
        const dy = p.y - mouse.y;
        const distance = Math.sqrt(dx * dx + dy * dy);

        if (distance < mouseDistance) {
          ctx.beginPath();
          ctx.strokeStyle = `rgba(52, 211, 153, ${0.4 * (1 - distance / mouseDistance)})`;
          ctx.lineWidth = 1;
          ctx.moveTo(p.x, p.y);
          ctx.lineTo(mouse.x, mouse.y);
          ctx.stroke();

        }
      });

      requestAnimationFrame(animate);
    }

    animate();

    window.addEventListener("resize", () => {
      width = window.innerWidth;
      height = window.innerHeight;
      canvas.width = width;
      canvas.height = height;
    });
  }
</script>
