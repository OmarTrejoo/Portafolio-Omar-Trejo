---
interface Props {
  currentLang: 'es' | 'en';
}

const { currentLang } = Astro.props;
---

<div class="flex items-center gap-1 bg-slate-800/50 backdrop-blur-sm rounded-lg p-1">
  <a
    href="/"
    class:list={[
      "px-3 py-1.5 text-sm font-medium rounded-md transition-all duration-200",
      currentLang === 'es' 
        ? "text-white bg-emerald-500/20" 
        : "text-slate-400 hover:text-white"
    ]}
  >
    ES
  </a>
  <a
    href="/en"
    class:list={[
      "px-3 py-1.5 text-sm font-medium rounded-md transition-all duration-200",
      currentLang === 'en' 
        ? "text-white bg-emerald-500/20" 
        : "text-slate-400 hover:text-white"
    ]}
  >
    EN
  </a>
</div>
