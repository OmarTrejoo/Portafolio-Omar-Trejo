const sizeClasses = {
  sm: 'w-3.5 h-3.5',
  md: 'w-4 h-4',
  lg: 'w-5 h-5',
  xl: 'w-6 h-6'
};

type IconData = {
  viewBox: string;
  fill?: string;
  stroke?: string;
  path: string;
};

const icons: Record<string, IconData> = {
  calendar: {
    viewBox: '0 0 20 20',
    fill: 'currentColor',
