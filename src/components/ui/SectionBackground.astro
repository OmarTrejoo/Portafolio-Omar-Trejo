---
interface Props {
	variant?: "dark" | "light";
	gradientPosition?: "top" | "center" | "bottom";
}

const { variant = "dark", gradientPosition = "center" } = Astro.props;


const gradientPositions = {
	top: "ellipse_at_top",
	center: "ellipse_at_center", 
	bottom: "ellipse_at_bottom"
};

const gradientDirections = {
	top: "bg-gradient-to-br",
	center: "bg-gradient-to-r",
	bottom: "bg-gradient-to-tr"
};
---

{variant === "light" ? (
	<>
		<!-- Dark overlay for subtle contrast -->
		<div class="absolute inset-0 bg-slate-950/30 pointer-events-none"></div>
		
		<!-- Rich emerald tint overlay for elegant look -->
		<div class={`absolute inset-0 ${gradientDirections[gradientPosition]} from-emerald-950/35 from-10% via-emerald-900/8 via-50% to-transparent pointer-events-none`}></div>
		
		<!-- Subtle spotlight -->
		<div
			class={`absolute inset-0 bg-[radial-gradient(${gradientPositions[gradientPosition]},_var(--tw-gradient-stops))] from-emerald-400/4 via-transparent to-transparent pointer-events-none`}
		>
		</div>
	</>
) : (
	<!-- Dark section - minimal effects -->
	<div
		class={`absolute inset-0 bg-[radial-gradient(${gradientPositions[gradientPosition]},_var(--tw-gradient-stops))] from-emerald-900/10 via-slate-950 to-slate-950 pointer-events-none`}
	>
	</div>
)}
